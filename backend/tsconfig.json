{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@prisma/client": ["src/generated/prisma"]
    }
  },
  "include": ["src/**/*.ts", "src/utils/supabase.ts"],
  "exclude": ["node_modules"]
}